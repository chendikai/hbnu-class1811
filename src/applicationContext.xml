    <!-- 通过实例工厂管理Bean对象 -->
   <!-- <bean id="factory" class="com.hbnu.pojo.UserFactory"></bean>
    <bean id="user" factory-bean="factory" factory-method="getUser"></bean> -->

    <!-- 1、通过有参构造函数注入属性 -->
    <!--
    <bean id="user" class="com.hbnu.pojo.User">
        &lt;!&ndash;
        name属性：类中的属性名
        value属性：属性值
        &ndash;&gt;
